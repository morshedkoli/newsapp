rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper to check if the user is modifying their own data
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    match /news/{newsId} {
      allow read: if true;
      allow write: if isAuthenticated(); // Restrict to admin in prod
      
      // Likes Subcollection
      // Path: /news/{newsId}/likes/{userId}
      match /likes/{userId} {
        allow read: if true;
        allow write: if isAuthenticated() && isOwner(userId);
      }

      // Comments Subcollection
      // Path: /news/{newsId}/comments/{commentId}
      match /comments/{commentId} {
         allow read: if true;
         allow create: if isAuthenticated() 
           && request.resource.data.userId == request.auth.uid; // Ensure userId matches auth
         allow update, delete: if isAuthenticated() 
           && resource.data.userId == request.auth.uid;
      }
    }
    // Users Collection
    match /users/{userId} {
      allow read, write: if isAuthenticated() && isOwner(userId);
      
      // Saved News Subcollection
      match /saved/{newsId} {
        allow read, write: if isAuthenticated() && isOwner(userId);
      }

      // Liked News Subcollection (for Saved Tab query)
      match /likes/{newsId} {
         allow read, write: if isAuthenticated() && isOwner(userId);
      }
    }
  }
}
